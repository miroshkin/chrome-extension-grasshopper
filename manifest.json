{
  "manifest_version": 3,
  "name": "Grasshopper Extension",
  "version": "1.0",
  "version_name": "1.0.0",
  "author": "Grasshopper Developer",
  "description": "A Chrome extension built with Grasshopper for quick access to Jira tickets",
  "minimum_chrome_version": "88",
  "permissions": [
    "storage",
    "commands",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Alt+J"
      },
      "description": "Toggle Grasshopper feature"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/grasshopper-16.png",
      "48": "icons/grasshopper-48.png"
    }
  },
  "icons": {
    "16": "icons/grasshopper-16.png",
    "48": "icons/grasshopper-48.png",
    "96": "icons/grasshopper-96.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
